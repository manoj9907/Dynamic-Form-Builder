<!DOCTYPE html>
<html lang="en">
<head>
    <title>Forms List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 50%;
            max-width: 400px;
            text-align: center;
        }

        h1 {
            color: #333;
            margin-bottom: 15px;
        }

        .scroll-box {
            max-height: 300px; /* Adjust height as needed */
            overflow-y: auto; /* Enables vertical scrolling */
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            background: #f9f9f9;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        li {
            background: #e3e3e3;
            margin: 8px 0;
            padding: 10px;
            border-radius: 5px;
            font-size: 18px;
            font-weight: bold;
            color: #333;
            cursor: pointer;
            transition: background 0.3s;
            text-align: center;
        }

        li:hover {
            background: #d1d1d1;
        }

        a {
            text-decoration: none;
            color: inherit;
            display: block;
            width: 100%;
            height: 100%;
        }

        /* Custom scrollbar for better UI */
        .scroll-box::-webkit-scrollbar {
            width: 8px;
        }

        .scroll-box::-webkit-scrollbar-thumb {
            background: #bbb;
            border-radius: 4px;
        }

        .scroll-box::-webkit-scrollbar-track {
            background: #f9f9f9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Forms Slug List</h1>
        <div class="scroll-box">
            <ul>
                <% forms.forEach(form => { %>
                    <li><a href="/form/<%= form.slug %>"><%= form.slug %></a></li>
                <% }) %>
            </ul>
        </div>
    </div>
</body>
</html>
