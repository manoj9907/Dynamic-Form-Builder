<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= form.title %></title>
</head>
<body>
    <h1><%= form.title %></h1>
    <form action="/submit-form" method="POST">
        <% form.fields.forEach(field => { %>
            <label><%= field.label %></label>
            <input type="<%= field.type %>" name="<%= field.name %>">
            <br>
        <% }) %>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
